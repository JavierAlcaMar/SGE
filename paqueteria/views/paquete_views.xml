<odoo>
    <!-- Vista de lista de paquetes -->
    <record id="view_paqueteria_paquete_list" model="ir.ui.view">
        <field name="name">paqueteria.paquete.list</field>
        <field name="model">paqueteria.paquete</field>
        <field name="arch" type="xml">
            <list string="Paquetes">
                <field name="tracking"/>
                <field name="remitente_id"/>
                <field name="destinatario_id"/>
                <field name="camion_id"/>
                <field name="municipio"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario de paquetes -->
    <record id="view_paqueteria_paquete_form" model="ir.ui.view">
        <field name="name">paqueteria.paquete.form</field>
        <field name="model">paqueteria.paquete</field>
        <field name="arch" type="xml">
            <form string="Paquete">
                <sheet>
                    <group>
                        <field name="tracking"/>
                        <field name="remitente_id"/>
                        <field name="destinatario_id"/>
                        <field name="camion_id"/>
                    </group>

                    <group string="Dirección de entrega">
                        <field name="pais"/>
                        <field name="region"/>
                        <field name="municipio"/>
                        <field name="calle"/>
                        <field name="numero"/>
                        <field name="datos_adicionales"/>
                    </group>

                    <notebook>
                        <page string="Actualizaciones del envío">
                            <field name="actualizaciones_ids">
                                <list editable="bottom">
                                    <field name="fecha"/>
                                    <field name="estado"/>
                                    <field name="notas"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

